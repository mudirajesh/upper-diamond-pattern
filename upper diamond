// C++ code to demonstrate pattern printing
#include <iostream>
using namespace std;

// Driver Code
int main()
{
   int n=5,space=0;
   for(int i=1;i<=n;i++){

    
    //left triangle
    for(int j=i;j<=n;j++){
        cout<<"*"<<" ";
    }

    //spaces
    for(int j=1;j<=space;j++){
    cout<<"  "; 
    }

    //right triangleá¹‡
    for(int j=i;j<=n;j++){
    cout<<"*"<<" "; 
    }

    space+=2;
    cout<<endl;  // next line
    
   }
    
    return 0;
    
}
